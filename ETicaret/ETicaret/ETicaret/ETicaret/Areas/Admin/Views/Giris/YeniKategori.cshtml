@model ETicaret.Models.Kategori
@{
    ViewBag.Title = "YeniKategori";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Yeni Kategori Ekleme</h2>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.Name)
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.CategoryId)
    @Html.TextBoxFor(x => x.CategoryId, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Kategori Ekle</button>
</form>

